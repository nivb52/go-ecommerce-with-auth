{{template "base" .}}

{{define "title"}}
    Payment Succeeded
{{end}}

{{define "content"}}
    <h2 class="mt-5"> Payment Succeeded </h2>

    <hr>

    <p> 
        Name: {{index .Data "cardholder"}} 
        <div> Email: {{index .Data "email"}} </div>
    </p>
    <p> Payment Method: {{index .Data "paymentMethod"}} 
    <div> 
        Amount: {{index .Data "paymentAmount"}}  {{index .Data "paymentCurrency"}} 
    </div>
    </p>

{{end}}